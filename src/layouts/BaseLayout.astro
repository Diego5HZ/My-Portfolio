---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Diego Henriquez — Portfolio',
  description = 'Software Engineer → Project Manager. UI/UX-minded. Projects & case studies.',
} = Astro.props;

const site = 'https://diego5hz.github.io';
const base = '/My-Portfolio/';
const currentPath = Astro.url.pathname;
const fullUrl = `${site}${currentPath}`;
---
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <!-- Usa base explícitamente para assets -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`.replace(/\/\//g, '/')} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <link rel="canonical" href={fullUrl} />

    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-neutral-50 text-neutral-900 selection:bg-brand-200 selection:text-neutral-900">
    <div class="mx-auto max-w-6xl px-4">
      <NavBar />
      <main class="py-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>