---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Diego Henriquez — Portfolio',
  description = 'Software Engineer → Project Manager. UI/UX-minded. Projects & case studies.',
} = Astro.props;

// Usa Astro.url que ya maneja automáticamente el base
const fullCanonical = Astro.url.href;
const pageTitle = Astro.url.pathname === '/My-Portfolio/' || Astro.url.pathname === '/My-Portfolio' 
  ? title 
  : `${title} - ${Astro.url.pathname.split('/').pop()}`;
---
<html lang="en" class="scroll-smooth">
  <head>
    <base href={import.meta.env.BASE_URL} />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullCanonical} />
    <link rel="canonical" href={fullCanonical} />

    <title>{pageTitle}</title>
  </head>

  <body class="min-h-screen bg-neutral-50 text-neutral-900 selection:bg-brand-200 selection:text-neutral-900">
    <div class="mx-auto max-w-6xl px-4">
      <NavBar />
      <main class="py-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>