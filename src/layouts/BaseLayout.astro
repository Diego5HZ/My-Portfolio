---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

const { title = 'Diego Henriquez — Portfolio', description = 'Software Engineer → Project Manager. UI/UX-minded. Projects & case studies.', canonical = '/' } = Astro.props;
---
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <title>{title}</title>
    <base href={import.meta.env.BASE_URL} />
  </head>
  <body class="min-h-screen bg-neutral-50 text-neutral-900 selection:bg-brand-200 selection:text-neutral-900">
    <div class="mx-auto max-w-6xl px-4">
      <NavBar />
      <main class="py-8">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>