---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Coming Soon — Diego Henriquez">
  <section class="min-h-[60vh] flex flex-col justify-center items-center text-center px-6">
    <h1 class="text-3xl md:text-5xl font-bold tracking-tight text-neutral-900">
      Coming Soon!
    </h1>
    <p class="mt-4 text-neutral-700 text-base md:text-lg max-w-xl leading-relaxed">
      This page is under construction. I’m polishing a few details before publishing it.
    </p>
    <a href={`${import.meta.env.BASE_URL}projects`} class="mt-8 inline-block rounded-xl bg-brand-600 px-6 py-3 text-white font-medium hover:bg-brand-700 transition">
      View Projects
    </a>
  </section>
</BaseLayout>
