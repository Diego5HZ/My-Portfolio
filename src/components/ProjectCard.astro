---
const { project } = Astro.props;
/** @typedef {{title:string, role:string, stack:string[], summary:string, href?:string, image?:string, category?:string}} Project */
---

<article
  class="group relative overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-sm hover:shadow-md transition">
  <!-- IMAGEN -->
  <div class="relative">
    {project.image ? (
      <img
        src={project.image}
        alt={project.title}
        loading="lazy"
        class="aspect-video w-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
      />
    ) : (
      <div class="aspect-video w-full bg-neutral-200" />
    )}

    <!-- BADGE CATEGORÍA -->
    {project.category && (
      <span
        class="absolute left-3 top-3 rounded-full bg-brand-100/90 text-brand-800 px-3 py-1 text-xs backdrop-blur">
        {project.category}
      </span>
    )}

    <!-- OVERLAY DEGRADADO TURQUESA -->
    <div
      class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/55 via-black/20 to-transparent opacity-70 group-hover:opacity-80 transition" />
  </div>

  <!-- CONTENIDO -->
  <div class="p-5">
    <div class="flex items-center justify-between gap-3">
      <h3 class="font-semibold text-lg">{project.title}</h3>
      <span class="rounded-full bg-brand-100 text-brand-800 px-3 py-1 text-xs">{project.role}</span>
    </div>
    <p class="mt-2 text-sm text-neutral-600">{project.summary}</p>

    <div class="mt-3 flex flex-wrap gap-2">
      {project.stack.map((s: string) => (
        <span class="text-xs rounded-full bg-brand-50 text-brand-700 px-2 py-1 border border-brand-100">{s}</span>
      ))}
    </div>

    {project.href && (
      <a
        href={project.href}
        class="mt-4 inline-flex items-center gap-1 text-sm text-brand-700 hover:text-brand-800 underline underline-offset-2"
      >
        View details
        <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M9 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    )}
  </div>

  <div class="pointer-events-none absolute inset-x-0 -bottom-20 h-40 bg-gradient-to-t from-brand-200/40 to-transparent opacity-0 group-hover:opacity-100 transition" />
</article>