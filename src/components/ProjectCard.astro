---
type Project = {
  title: string;
  role: string;
  stack: string[];
  summary: string;
  href?: string;
  image?: string;
  category?: string;
};

const base = import.meta.env.BASE_URL;
const { project } = Astro.props as { project: Project };

const isExternal = (url: string): boolean => /^https?:\/\//i.test(url);
const rawHref = project.href ?? '';
const href = rawHref
  ? (isExternal(rawHref) ? rawHref : `${base}${rawHref.replace(/^\//, '')}`)
  : undefined;

const isComingSoon = !!rawHref && /coming-soon\/?$/i.test(rawHref);
const cardClickable = !!href && !isComingSoon;
---

<article
  class={`group relative overflow-hidden rounded-2xl border border-neutral-200 bg-white shadow-sm hover:shadow-md transition ${cardClickable ? 'cursor-pointer' : ''}`}
>
  {cardClickable && (
    <a
      href={href}
      target={isExternal(rawHref) ? '_blank' : undefined}
      rel={isExternal(rawHref) ? 'noopener noreferrer' : undefined}
      aria-label={`Open ${project.title}`}
      class="absolute inset-0 z-10"
    />
  )}

  <div class="relative">
    {project.image ? (
      <img
        src={project.image}
        alt={project.title}
        loading="lazy"
        class="aspect-video w-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
      />
    ) : (
      <div class="aspect-video w-full bg-neutral-200" />
    )}

    <div class="absolute left-3 top-3 flex flex-wrap items-center gap-2 z-20">
      {project.category && (
        <span class="rounded-full bg-brand-100/90 text-brand-800 px-3 py-1 text-xs backdrop-blur">
          {project.category}
        </span>
      )}
    </div>

    {cardClickable ? (
      <div class="absolute right-3 top-3 z-30 select-none">
        <span class="inline-flex items-center gap-1 rounded-full bg-brand-600/90 text-white px-3 py-1 text-[11px] uppercase tracking-wide shadow-sm backdrop-blur">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M9 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          Visit Website
        </span>
      </div>
    ) : (
      isComingSoon && (
        <div class="absolute -right-10 top-4 rotate-45 z-30 select-none bg-neutral-900/90 px-8 py-1 shadow-md">
          <span class="text-white text-[10px] tracking-[.15em] uppercase">
            Coming Soon
          </span>
        </div>
      )
    )}

    <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/55 via-black/20 to-transparent opacity-70 group-hover:opacity-80 transition" />
  </div>

  <div class="p-5">
    <div class="flex items-center justify-between gap-3">
      <h3 class="font-semibold text-lg">{project.title}</h3>
      <span class="rounded-full bg-brand-100 text-brand-800 px-3 py-1 text-xs">{project.role}</span>
    </div>

    <p class="mt-2 text-sm text-neutral-600">{project.summary}</p>

    <div class="mt-3 flex flex-wrap gap-2">
      {project.stack.map((s: string) => (
        <span class="text-xs rounded-full bg-brand-50 text-brand-700 px-2 py-1 border border-brand-100">{s}</span>
      ))}
    </div>
  </div>

  <div class="pointer-events-none absolute inset-x-0 -bottom-20 h-40 bg-gradient-to-t from-brand-200/40 to-transparent opacity-0 group-hover:opacity-100 transition" />
</article>